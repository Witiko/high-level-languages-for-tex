\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{markdownthemewitiko_csbulletin}[2021/11/18]

% Metadata
\newcommand\acro[1]{%
  \textsc{\MakeLowercase{#1}}%
}
\markdownSetup{
  jekyllData,
  renderers = {
    jekyllDataEnd = {
      \markdownSetup{
        renderers = {
          strongEmphasis = {%
            \acro{##1}%
          },
        }
      }%
      \maketitle
      \vspace*{-2em}%
      \begin{abstract}%
    },
    interblockSeparator = {},
  },
}
\RequirePackage{expl3}
\ExplSyntaxOn
\keys_define:nn
  { markdown/jekyllData }
  {
    title        .code:n = { \title{#1} },
    englishTitle .code:n = { \EnglishTitle{#1} },
    author       .code:n = { \author{#1} },
    podpis       .code:n = { \podpis{#1} },
  }
\ExplSyntaxOff

